# Application Settings
APP_NAME=Pricing Workflow Automation
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Oracle Database
ORACLE_HOST=pricing-db.bofa.com
ORACLE_PORT=1521
ORACLE_SERVICE=PRCPROD
ORACLE_USER=pricing_app
ORACLE_PASSWORD=your_oracle_password_here
ORACLE_POOL_MIN=2
ORACLE_POOL_MAX=10

# Unix/SSH Server
PRICING_SERVER_HOST=pricing-batch01.bofa.com
PRICING_SERVER_PORT=22
PRICING_SERVER_USER=pricingsvc
# Use either key-based or password authentication
PRICING_SERVER_KEY_PATH=/keys/pricing_rsa
# PRICING_SERVER_PASSWORD=your_ssh_password_here

# LLM API (your existing GPU server)
LLM_API_URL=http://gpu-server.bofa.com:8080
LLM_MODEL=llama-3-70b
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=120

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_redis_password_here

# Skills Directory (context for LLM)
SKILLS_DIR=/app/skills

# MCP Server Ports
MCP_ORACLE_PORT=9001
MCP_UNIX_PORT=9002
MCP_REPORTING_PORT=9003

# Workflow Settings
WORKFLOW_TIMEOUT=300
MAX_CONCURRENT_WORKFLOWS=10

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
